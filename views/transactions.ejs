<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MoneyMind/transactions</title>
</head>
<body>

  
  <h1>Transactions</h1>

  <div id="summary">
    <span id="expense">Expense: <%= summary.expense %></span>
    <span id="balance">Balance: <%= summary.balance %></span>
    <span id="income">Income: <%= summary.income %></span>
  </div>
  
  <form action="/transactions" method="POST">
    <label for="amount">Amount:</label>
    <input type="number" id="amount" name="amount" required><br><br>
    
    <label for="description">Description:</label>
    <input type="text" id="description" name="description" required><br><br>
    
    <label for="category">Category:</label>
    <input type="text" id="category" name="category" required><br><br>
    
    <label for="type">Type:</label>
    <select id="type" name="type" required>
      <option value="">Select type</option>
      <option value="income">Income</option>
      <option value="expense">Expense</option>
    </select><br><br>
    
    <label for="date">Date:</label>
    <input type="date" id="date" name="date" required><br><br>
    
    <button type="submit">Add Transaction</button>
  </form>

  <ul id="liste-transactions">
    <% if (transactions && transactions.length > 0) { %>
      <% transactions.forEach(transaction => { %>
        <li>
          <span id="category"><%= transaction.category %></span>
          <span id="amount"><%= transaction.amount %></span>
          <span id="description"><%= transaction.description %></span>
          <span id="date"><%= transaction.date %></span>
          <span id="type"><%= transaction.type %></span>
        </li>
      <% }) %>
    <% } else { %>
      <li>Aucune transaction trouv√©e</li>
    <% } %>
  </ul>

  <script src="/transactions.js"></script>

</body>
</html>