<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MoneyMind/transactions</title>
</head>
<body>
  
  <h1>Transactions</h1>
  <form action="/transactions" method="POST">
    <label for="amount">Amount:</label>
    <input type="number" id="amount" name="amount" required><br><br>
    
    <label for="description">Description:</label>
    <input type="text" id="description" name="description" required><br><br>
    
    <label for="date">Date:</label>
    <input type="date" id="date" name="date" required><br><br>
    
    <button type="submit">Add Transaction</button>
  </form>

  <ul id="liste-transactions">
    <% transactions.forEach(transaction => { %>
      <li>
        <span id="category"><%= transaction.category %"></span>
        <span id="amount"><%= transaction.amount %"></span>
        <span id="description"><%= transaction.description %"></span>
        <span id="date"><%= transaction.date %"></span>
        <span id="type"><%= transaction.type %></span>
      </li>
    <% }) %>
  </ul>

  <script src="/transactions.js"></script>

</body>
</html>